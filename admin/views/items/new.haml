.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:items, :index)
      %li.active=link_to pat(:new), url(:items, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:item)
    .inner
      =form_for :item, url(:items, :create), :class => :form do |f|
        =partial "items/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
