.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:items, :index)
      %li=link_to pat(:new), url(:items, :new)
      %li.active=link_to pat(:edit), url(:items, :edit, :id => @item.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:item)
    .inner
      =form_for :item, url(:items, :update, :id => @item.id), :method => :put, :class => :form do |f|
        =partial "items/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
